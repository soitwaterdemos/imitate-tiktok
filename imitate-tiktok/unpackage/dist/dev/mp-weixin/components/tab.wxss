
.tab {
  height: 50px;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-flow: nowrap row;
          flex-flow: nowrap row;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  z-index: 20;
}
.tab-box {
  color: #ffffff;
  -webkit-flex-basis: 20%;
          flex-basis: 20%;
  height: 50px;
  line-height: 50px;
  text-align: center;
}
.icon-box {
  width: 60%;
  height: 30px;
  line-height: 30px;
  color: #000000;
  background: #FFFFFF;
  border-radius:6px;
  font-size: 16px;
  -webkit-transform: translate(20%, 10px);
          transform: translate(20%, 10px);
}

