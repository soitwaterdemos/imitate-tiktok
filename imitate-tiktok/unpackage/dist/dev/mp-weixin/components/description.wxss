
.description {
  height: 100px;
  margin-left: 10px;
  color: white;
  width: 120px;
}
.author.title.music {
  line-height: 35px;
}
.author {
  font-size: 16px;
  white-space: nowrap;
  width: 100%;
  overflow-x: auto;
}
.title {
  font-size: 12px;
  width: 100%;
  height: 75px;
  line-height: 25px;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
}
.music-box {
  width: 100px;
  overflow: hidden;
}
.music {
  font-size: 12px;
  width: 140px;
  white-space: nowrap;
  -webkit-animation: music 6s linear infinite;
          animation: music 6s linear infinite;
}
@-webkit-keyframes music{
0%{
    -webkit-transform: translate3d(80%, 0, 0);
            transform: translate3d(80%, 0, 0);
}
100%{
    -webkit-transform: translate3d(-80%, 0, 0);
            transform: translate3d(-80%, 0, 0);
}
}
@keyframes music{
0%{
    -webkit-transform: translate3d(80%, 0, 0);
            transform: translate3d(80%, 0, 0);
}
100%{
    -webkit-transform: translate3d(-80%, 0, 0);
            transform: translate3d(-80%, 0, 0);
}
}

